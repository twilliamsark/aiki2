<div class="tab-content">
  <div class="tab-pane <%= format_states[format][:state] %>" id="tab<%= format.id %>">
    <% if format_states[format][:state] == 'disabled' %>
      <%= format.name %>
    <% else %>
      <% waza_format = waza_formats_hash[format] ? waza_formats_hash[format].first : nil %>
      <br/>
      <div class="row pad_sides">
        <div class="col-md-3"><label>Waza:</label></div>
        <div class="col-md-6"><%= waza.name %></div>
        <div class="col-md-3">
            <%= link_to 'Add Note', new_user_waza_format_user_note_path(user_id: current_user, waza_format_id: waza_format, video: video.id), {:class => "btn btn-primary btn-xs pull-right", :remote => true, 'data-toggle' => 'modal', 'data-target' => '#userNoteModal'} %>
        </div>
      </div>
      <div class="row pad_sides">
        <div class="col-md-3"><label><%= format.name %>:</label></div>
        <div class="col-md-9"><%= format.description %></div>
      </div>
      <br/>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-bordered">
            <thead>
              <th></th>
              <th>Video</th>
              <th>Rank</th>
              <% if format.iaido? %>
                <th>Kata</th>
              <% end %>
              <th>Format(s)</th>
              <th>Sensei</th>
              <th>Style</th>
            </thead>
            <tbody>
              <%= render waza_formats_hash[format], format: format, video: video  %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render 'videos/detail', video: video if Video.show_video?(video) %>
<%= render 'wazas/video', video: video, waza: waza %>
