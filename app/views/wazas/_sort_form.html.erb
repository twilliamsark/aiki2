  <% if FILTERING %>
    <%= form_tag sort_url, method: :get, remote: true do %>
      <%
        sort_options = %w(Rank Stance Attack Technique Direction)
      %>
      <div class="row">
        <div class="col-md-12"><h4>Sort</h4></div>
      </div>
      <div id="sort_row" class="row lnav_row">
        <div class="col-md-2">
          <%= label_tag "sort_type", "Attribute:" %>
        </div>
        <div class="col-md-6">
          <%= select_tag "sort_type", options_for_select(sort_options, selected: sort_by) %>
        </div>
        <div class="col-md-2">
          <%= submit_tag 'Go', id: 'top_go' %>
        </div>
      </div>

      <%= hidden_field_tag "type", type.titleize %>

    <% end %>
  <% else %>
    <br/>
  <% end %>
