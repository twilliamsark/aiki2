<% provide(:title, @title) %>
<div class="row">
  <div class="col-md-12 center">
    <h1>Update Password</h1>
  </div>
</div>
<%= form_for @user, url: password_reset_path(params[:id]), html: { class: "input_form" } do |f| %>
  <div class="row">
    <div class="col-md-12"><%= render 'shared/error_messages', object: f.object %></div>
  </div>
  <div class="row pad_bottom">
    <div class="col-md-1 col-md-offset-2">
      <%= f.label :password %>
    </div>
    <div class="col-md-6">
      <%= f.password_field :password %>
    </div>
  </div>
  <div class="row pad_bottom">
    <div class="col-md-1 col-md-offset-2">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-md-6">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.submit "Update Password", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
