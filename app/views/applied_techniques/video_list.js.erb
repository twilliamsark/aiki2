$("#video_list").replaceWith("<%= escape_javascript(render('video_list', selection: @selection, sort_by: @default_sort, type: @type)) %>")
<% if @applied_technique
  at = exhibit(@applied_technique, self)
%>
  $("#vid").replaceWith("<%= escape_javascript(at.render_body(@video)) %>")
<% else %>
  $("#vid").replaceWith("<%= escape_javascript(render('shared/no_video')) %>")
<% end %>
$("#filter_form").find('input[type=text]').val('')
