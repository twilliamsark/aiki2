<div id="filter_form">
  <% if FILTERING %>
    <% sort_by ||= 'Rank' %>
    <%= form_tag applied_techniques_video_list_url, method: :get, remote: true do %>
      <%
        sort_options = %w(Rank)
        if type == 'aikido'
          sort_options += %w(Technique Attack Stance Format)
        elsif type == 'iaido'
          sort_options += %w(Kata)
        end
      %>
      <div class="row">
        <div class="col-md-12"><h4>Sort</h4></div>
      </div>
      <div id="sort_row" class="row lnav_row">
        <div class="col-md-2">
          <%= label_tag "sort_type", "Attribute:" %>
        </div>
        <div class="col-md-6">
          <%= select_tag "sort_type", options_for_select(sort_options, selected: sort_by) %>
        </div>
        <div class="col-md-2">
          <%= submit_tag 'Go', id: 'top_go' %>
        </div>
        <div class="col-md-2 filter_buttons">
          <% if type == 'aikido' %>
            <button id="show_filters">Filter</button>
          <% end %>
        </div>
      </div>

      <% if type == 'aikido' %>
        <%= render 'filter_selection' %>
      <% end %>

      <%= hidden_field_tag "type", type.titleize %>

      <div class="row lnav_row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
          <%= submit_tag 'Go', id: 'bottom_go' %>
        </div>
      </div>

    <% end %>
  <% else %>
    <br/>
  <% end %>
</div>
