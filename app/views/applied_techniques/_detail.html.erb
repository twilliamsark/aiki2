<h1><%= applied_technique.name %></h1>
<% if SHOW_DEBUG %>
  <h2>(<%= !video.nil? ? video.youtube_code : 'n/a' %>)</h2>
<% end %>
<% if applied_technique.description.present? %>
  <h4 class="left_align"><%= applied_technique.description %></h4>
<% end %>
<ul class="left_align">
  <% if current_user.admin? %>
    <li class="no_bullet_list">
      <strong>Admin Page:</strong>
      <%= link_to "#{applied_technique.name}", admin_applied_technique_path(applied_technique), class: 'btn btn-default btn-xs', role: 'button' %>
    </li>
    <li class="no_bullet_list">&nbsp;</li>
  <% end %>
  <% if applied_technique.stance %>
    <li class="no_bullet_list"><strong><%= applied_technique.stance.name %>:</strong> <%= applied_technique.stance.description %></li>
  <% end %>
  <% if applied_technique.attack %>
    <li class="no_bullet_list"><strong><%= applied_technique.attack.name %>:</strong> <%= applied_technique.attack.description %></li>
  <% end %>
  <% if applied_technique.technique %>
    <li class="no_bullet_list"><strong><%= applied_technique.technique.name %>:</strong> <%= applied_technique.technique.description %></li>
  <% end %>
  <% if applied_technique.direction %>
    <li class="no_bullet_list"><strong><%= applied_technique.direction.name %>:</strong> <%= applied_technique.direction.description %></li>
  <% end %>
  <% if applied_technique.attack_height %>
    <li class="no_bullet_list"><strong><%= applied_technique.attack_height.name %>:</strong> <%= applied_technique.attack_height.description %></li>
  <% end %>
  <% if applied_technique.format %>
    <li class="no_bullet_list"><strong><%= applied_technique.format.name %>:</strong> <%= applied_technique.format.description %></li>
    <% if applied_technique.aiki_toho? && applied_technique.kata %>
      <li class="no_bullet_list"><strong>Kata:</strong> <%= applied_technique.kata.name %></li>
      <li class="no_bullet_list"><strong>Number:</strong> <%= applied_technique.position %></li>
    <% end %>
  <% end %>
  <% if applied_technique.waza %>
    <li class="no_bullet_list"><strong><%= applied_technique.waza.name %>:</strong> <%= applied_technique.waza.description %></li>
  <% end %>
  <% unless applied_technique.rank.miscellaneous? %>
    <li class="no_bullet_list"><strong>Rank:</strong> <%= applied_technique.rank.label %></li>
    <li class="no_bullet_list"><strong>Testing:</strong> <%= "#{applied_technique.on_test? ? 'On Test' : 'Know For Rank'}" %></li>
  <% end %>
  <% if applied_technique.related %>
    <% related = applied_technique.related %>
    <li class="no_bullet_list"><strong>Related <%= related.format.name %>:</strong>
      <% if related.aiki_toho? %>
        <%= link_to related.name, iaido_path(sort: 'format', applied_technique: related) %>
      <% else %>
        <%= link_to related.name, aikido_path(sort: 'format', applied_technique: related) %>
      <% end %>
    </li>
  <% end %>
  <% if applied_technique.videos.active.size > 1 %>
    <li class="no_bullet_list"><strong>Other Videos:</strong></li>
    <% applied_technique.videos.active.each do |vid| %>
      <% next if vid.id == video.id %>
      <li class="no_bullet_list_indented other_videos">
        <%= link_to vid.name, remote_show_url(vid.id), remote: true %>
      </li>
    <% end %>
  <% end %>
</ul>
